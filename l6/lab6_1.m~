close all;
clearvars;
clc;

%% read 
plansza = imread('plansza.bmp');

figure(1);
imshow(plansza);

%% srednia
averageFilter = fspecial('average');

mask = [1 2 1; 2 4 2; 1 2 1];
mask = mask / sum(sum(mask));

figure(2);
subplot(2, 2, 1);
imshow(plansza);
title('Oiginal');
subplot(2, 2, 2);
imshow(uint8(conv2(plansza, averageFilter, 'same')));
title('srednia');

subplot(2, 2, 3);
imshow(uint8(conv2(plansza, mask, 'same')));
title('maska');

subplot(2, 2, 4);
imshow(imabsdiff(plansza, uint8(conv2(plansza, averageFilter, 'same'))));
title('roznica');

%% maska guassian
guassianFilter = fspecial('gaussian', [5 5], 0.5);

figure(3);


